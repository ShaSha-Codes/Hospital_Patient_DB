  <body>
    <nav class="navbar navbar-light bg-light static-top">
      <div class="container">
        <a class="navbar-brand" href="/"
          ><img src="/assets/doctor.png" height="40px" width="40px" />
          EZ-APPOINT</a
        >
        <div>
          <a class="btn btn-primary" href="track">Track Status</a>
          <a class="btn btn-primary" href="../views/admin.ejs">Admin</a>
        </div>
      </div>
    </nav>

    <div class="container">
    <div class="table-responsive">
      <table class="table">
        <thead class="thead-dark">
          <tr>
            <th scope="col">#</th>
            <th scope="col">First</th>
            <th scope="col">Last</th>
            <th scope="col">Service</th>
            <th scope="col">Status</th>
            <th scope="col">Message</th>
            <th scope="col">Referral</th>
          </tr>
        </thead>
        <tbody>
          <% for(var i=0; i < data.length; i++) { %>
          <tr>
            <td><%= data[i]._id %></td>
            <td><%= data[i].first_name %></td>
            <td><%= data[i].last_name %></td>
            <td><%= data[i].service %></td>
            <td><%= data[i].status %></td>
            <td><%= data[i].message %></td>
            <td>
              <% if(data[i].img.contentType==undefined){%> No Data
              <%}else{%><button
                type="button"
                class="btn btn-dark"
                onClick="view('data:image/<%=data[i].img.contentType%>;base64,<%=data[i].img.data.toString('base64')%>');"
              >
                Open</button
              ><%}%>
            </td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>
    </div>
    <div class="container">
    <footer class="footer bg-light">
      <div class="container">
        <div class="row">
          <div class="col-lg-6 h-100 text-center text-lg-start my-auto">
